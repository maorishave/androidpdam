<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <android.support.v7.widget.Toolbar
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/appbar"
         android:background="#9cc917">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

          </RelativeLayout>
     </android.support.v7.widget.Toolbar>
     <LinearLayout
         android:id="@+id/fotoprofil"
         android:layout_below="@+id/appbar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center"
         android:background="@color/white">
     <ImageView
         android:layout_marginTop="20dp"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_below="@+id/teksprofil"
         android:layout_marginBottom="20dp"
         android:src="@drawable/profil" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/datanama"
         android:layout_below="@id/fotoprofil"
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:layout_marginTop="10dp">
     <TextView
         android:id="@+id/teksNama"
         android:layout_below="@+id/profil"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Nama"
         android:layout_marginLeft="20dp"
         android:textSize="20dp"
         android:layout_marginTop="30dp"/>
     <TextView
         android:id="@+id/isiNama"
         android:layout_below="@+id/teksNama"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Okta Athour Rizqi"
         android:layout_marginLeft="20dp"
         android:textColor="#000000"
         android:textSize="20dp"/>
          <TextView
              android:id="@+id/teksNIP"
              android:layout_marginTop="15dp"
              android:layout_below="@+id/isiNama"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:text="NIP"
              android:textSize="20dp" />
          <TextView
              android:id="@+id/isiNIP"
              android:layout_below="@+id/teksNIP"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:text="3515183010970008"
              android:textColor="#000000"
              android:textSize="20dp"
              android:layout_marginBottom="30dp"/>
     </LinearLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="55dp"
         android:layout_above="@+id/fotoprofil"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="24dp"
         android:padding="15dp"
         android:text="Profil Teknisi"
         android:textAllCaps="false"
         android:textColor="#ffffff"
         android:textSize="18sp" />

</RelativeLayout>