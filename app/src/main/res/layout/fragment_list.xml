<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <android.support.v7.widget.Toolbar
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/appbar"
         android:background="#9cc917">
     </android.support.v7.widget.Toolbar>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="55dp"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true"
         android:padding="15dp"
         android:text="Pekerjaan Baru"
         android:textAllCaps="false"
         android:textColor="#ffffff"
         android:textSize="18sp" />
          
          <LinearLayout
              android:id="@+id/listtugasbaru"
              android:layout_below="@+id/appbar"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="160dp"
                   android:id="@+id/cardview1baru"
                   android:clickable="true"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/gold">
                         <ImageView
                             android:id="@+id/pict_tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="30dp"
                             android:layout_centerVertical="true"
                             android:padding="10dp"
                             android:src="@drawable/ic_new_24dp" />
                         <TextView
                             android:id="@+id/status_tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="150dp"
                             android:layout_marginTop="55dp"
                             android:text="Tugas Baru"
                             android:textSize="20dp"
                             android:textColor="@color/white"
                             android:padding="10dp"/>
                         <TextView
                             android:id="@+id/jumlah_tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="290dp"
                             android:layout_marginTop="55dp"
                             android:text="0"
                             android:textStyle="bold"
                             android:textColor="@color/white"
                             android:textSize="20dp"
                             android:padding="10dp"/>
                    </RelativeLayout>
               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="160dp"
                   android:id="@+id/cardview2baru"
                   android:clickable="true"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/reddark">
                         <ImageView
                             android:id="@+id/pict2tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_donut_large_24dp"
                             android:layout_marginLeft="30dp"
                             android:layout_centerVertical="true"
                             android:padding="10dp"/>
                         <TextView
                             android:id="@+id/status2tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="150dp"
                             android:layout_marginTop="55dp"
                             android:textColor="@color/white"
                             android:textSize="20dp"
                             android:text="Proses"
                             android:padding="10dp"/>
                         <TextView
                             android:id="@+id/jumlah2tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="290dp"
                             android:layout_marginTop="55dp"
                             android:text="0"
                             android:textStyle="bold"
                             android:textColor="@color/white"
                             android:textSize="20dp"
                             android:padding="10dp"/>
                    </RelativeLayout>
               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/cardview3baru"
                   android:layout_width="match_parent"
                   android:layout_height="160dp"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="3dp"
                   android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/indigo"
                        android:orientation="horizontal">

                         <ImageView
                             android:id="@+id/pict3tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_marginLeft="30dp"
                             android:padding="10dp"
                             android:src="@drawable/ic_send_24dp" />

                         <TextView
                             android:id="@+id/status3tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="150dp"
                             android:layout_marginTop="55dp"
                             android:padding="10dp"
                             android:text="Kirim Tugas"
                             android:textColor="@color/white"
                             android:textSize="20dp" />

                         <TextView
                             android:id="@+id/jumlah3tugasbaru"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="290dp"
                             android:layout_marginTop="55dp"
                             android:padding="10dp"
                             android:text="0"
                             android:textColor="@color/white"
                             android:textSize="20dp"
                             android:textStyle="bold" />
                    </RelativeLayout>
               </android.support.v7.widget.CardView>
          </LinearLayout>

</RelativeLayout>