<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CallcenterPengaturanActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:background="#9cc917">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/btnback"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="10dp"
        android:layout_alignBottom="@id/appbar"
        android:src="@drawable/ic_back"
        android:clickable="true"/>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/appbar"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:text="Call Center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/appbar"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="  Call Center 24 Jam"
            android:drawableLeft="@drawable/ic_contact_phone_black_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="0312926666"
            android:paddingLeft="32dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="  Call Center Bebas Pulsa"
            android:drawableLeft="@drawable/ic_contact_phone_black_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="08001926666"
            android:paddingLeft="32dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

</RelativeLayout>